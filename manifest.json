{
    "name": "FireTime",
    "version": "1.0.2",
    "description": "Displays a moment.js relative time for timestamps when viewing data in the Firebase console.",
    "manifest_version": 2,

    "icons": {
      "48": "icon48.png",
     "128": "icon128.png"
    },

    "content_scripts": [{
      "css": ["styles.css"],
      "js": ["moment.js", "content.js"],
      "matches": ["https://console.firebase.google.com/*/database/*/data*"]
    }]
}